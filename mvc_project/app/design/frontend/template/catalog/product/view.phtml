<script>
    let qnt = document.getElementById('quantity');
    function increase() {
        if (parseInt(qnt.value) + 1 <= 5)
            qnt.value = parseInt(qnt.value) + 1;
    }
    function decrease() {
        if (parseInt(qnt.value) - 1 >= parseInt(qnt.getAttribute('min')))
            qnt.value = parseInt(qnt.value) - 1;
    }
</script>